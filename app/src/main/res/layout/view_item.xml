<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_view_layout"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/backColor"
        android:padding="15dp">
        <ImageView
            android:id="@+id/exercises_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/exercises_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/exercises_image"
            android:layout_toRightOf="@id/exercises_image"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/exercises_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exercises_name"
            android:layout_toEndOf="@id/exercises_image"
            android:layout_toRightOf="@id/exercises_image"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="15dp" />
    </RelativeLayout>

</LinearLayout>
